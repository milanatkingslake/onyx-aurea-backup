<!--Settings for the rules engine-->
<settings>
	<!--
	Enable caching: turns caching of grammar definition and all rule metadata files.
	Set to 1 to enable caching, 0 to disable caching.
	-->
	<setting name="enableCaching" value="0" />
	<!--
	Execution mode: possible values are "development", "test" and "production".
	Rules can be restricted to run in a specific mode or for all modes.
	-->
	<setting name="mode" value="development" />
</settings>
